# Application
APP_NAME=OlimpQR
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=change-this-to-random-secret-key-in-production
HMAC_SECRET_KEY=change-this-to-random-hmac-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=olimpqr
POSTGRES_USER=olimpqr_user
POSTGRES_PASSWORD=change-this-password-in-production
DATABASE_URL=postgresql+asyncpg://olimpqr_user:change-this-password-in-production@postgres:5432/olimpqr

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_SHEETS=answer-sheets
MINIO_BUCKET_SCANS=scans

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# API
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost"]

# OCR Settings
OCR_SCORE_FIELD_X=150
OCR_SCORE_FIELD_Y=250
OCR_SCORE_FIELD_WIDTH=40
OCR_SCORE_FIELD_HEIGHT=15
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_USE_GPU=false

# QR Code Settings
QR_TOKEN_SIZE_BYTES=32
QR_ERROR_CORRECTION=H
ENTRY_TOKEN_EXPIRE_HOURS=24

# Frontend (for production nginx)
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost:8000
